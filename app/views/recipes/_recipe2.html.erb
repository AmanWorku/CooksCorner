<div id="<%= dom_id recipe %>" class="recipe_container2">
  <div class="block3">
    <h4 class="recipe_title2">
      <%= link_to recipe.title, recipe %>
    </h4>

  </div>
    <p class="recipe_description2">
      <br>Preparation Time: <%= recipe.preparation_time %> minutes</br>
      <br>Cooking Time: <%= recipe.cooking_time %> minutes</br>
      <br>Description: <%= recipe.description %></br>
    </p>
    <%= form_with(model: recipe, id: "recipe_form", remote: true) do |form| %>
      <div class="form_group save-public">
      <div class="form_group save-public">
      <%= form.label :public_recipe, style: "display: block", class: "form_label" do %>
        Public 
        <div class="toggle-switch">
          <%= form.check_box :public_recipe, id: "recipe_public_recipe", class: "form_check_input", onchange: "this.form.submit()" %>
          <span class="slider round"></span>
        </div>
      <% end %>
    </div>
      
    <% end %>

</div>
